page {
  -webkit-text-size-adjust: 100% !important;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  overflow-x: hidden;
  height: 100%;
}

input {
  outline: none;
  font-size: 100%;
  -webkit-appearance: none;
}

page,
view,
ul,
li,
input,
p,
th,
td,
button,
section {
  margin: 0;
  padding: 0;
}

ul {
  width: 100%;
}

ul,
li,
p {
  display: block;
}

table {
  display: table;
  border-collapse: collapse;
  border-spacing: 0;
}

th {
  text-align: inherit;
  display: table-cell;
}

thead {
  display: table-header-group;
}

tbody {
  display: table-row-group;
}

tr {
  display: table-row;
}

td {
  display: table-cell;
}

em,
th,
i {
  font-style: normal;
  font-weight: 500;
}

ol,
ul {
  list-style: none;
}

.fn-clear:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}

.none {
  display: none;
}

.clear-both {
  clear: both;
}

/*  */
.sticky {
  position: sticky;
  top: 0;
  z-index: 2;
}


/* iphoneX底部 */
.iphone-placeholder {
  padding-bottom: env(safe-area-inset-bottom);
}

/*元素隐藏显示*/

.hide {
  display: none !important;
}

.show {
  display: block !important;
}
/* 去除button默认样式 */
button:after {
  border: 0rpx;
}
/* 去除button样式 */
button {
  position: relative;
  display: '';
  margin-left: auto;
  margin-right: auto;
  padding-left: 0;
  padding-right: 0;
  box-sizing: none;
  border: 0rpx;
  font-size: 26rpx;
  text-align: center;
  text-decoration: none;
  line-height: 34rpx;
  border-radius: 0;
  /*  border-radius: 5rpx; */
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #666666;
  background-color: transparent;
}

/*不换行加...*/

.t-ellipsis,
.t-ellipsis-2,
.t-ellipsis-3 {
  overflow: hidden;
  text-overflow: ellipsis;
}

.t-ellipsis {
  white-space: nowrap;
}

.t-ellipsis-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.t-ellipsis-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}